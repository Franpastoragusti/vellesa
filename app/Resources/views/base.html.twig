  {% endblock %}


  </head>

  {% block body %}
  <body class="nav-md">

        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NM9WWG8"
                          height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->

        <div class="container body">

            {% block header %}
                <!--header start-->
                <header>
                  <div class="top_nav">
                    <div class="nav_menu black-bg">
                      <nav>
                        <div class="col-xs-2">
                          <a href="/"><img id="logo" src="{{ asset('img/logo.png') }}"></a>
                        </div>
                        <div class="col-xs-8">
                          {% block headerTitle %}
                                <a href="/app"><h1 class="title2">Tú Decides</h1></a>
                          {% endblock %}
                        </div>
                        {% block user %}
                        <div class="col-xs-2">
                          <ul class="nav navbar-nav navbar-right">
                            <li>
                              <a href="#" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <span class=" fa fa-user"></span><span>{{ app.user.username }}</span>
                              </a>
                                <ul id="userOptions" class="dropdown-menu dropdown-usermenu pull-right">
                                  <li><a href="/logout"><i class="fa fa-sign-out pull-right"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                          </ul>
                        </div>
                        {% endblock %}
                      </nav>
                    </div>
                  </div>
                  </header>
                <!--header end-->
            {% endblock %}

            <!-- page content -->

            <section class="col-xs-12" id="page">
              {% block main %}

              {% endblock %}
              {% block assistant %}
                <div id="assistant_body">
                  {% block assistantContent %}{% endblock %}
                </div>
              {% endblock %}
            </section>

        </div>

        <!-- jQuery -->
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        <!-- Custom Theme Scripts -->
        <script src="{{ asset('/js/custom.min.js') }}"></script>
        {% block javascripts %}{% endblock %}



  </body>
  {% endblock %}
</html>
