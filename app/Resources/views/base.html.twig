<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}TÃº Decides | Panel{% endblock %}</title>

    <!-- Bootstrap -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('font-awesome/css/font-awesome.css') }}" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="{{ asset('css/custom.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/base.css') }}" rel="stylesheet" />
    {% block stylesheets %}{% endblock %}
  </head>

  <body class="nav-md">
    {% block body %}
        <div class="container body">

            {% block header %}
                <!--header start-->

                <header>
                  <div class="top_nav">
                    <div class="nav_menu black-bg">
                      <nav>
                        <div class="nav toggle">
                          <a href="index"><img id="logo" src="{{ asset('img/logo.png') }}"></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                          <li class="">
                            <a href="#" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                              <img src="{{ asset('img/avatar.png') }}" id="avatar" alt="">John Doe
                              <span class=" fa fa-angle-down"></span>
                            </a>
                            <ul id="userOptions" class="dropdown-menu dropdown-usermenu pull-right">
                              <li><a href="#">Perfil</a></li>
                              <li>
                                <a href="javascript:;">
                                  <span class="badge bg-red pull-right">50%</span>
                                  <span>Proceso Realizado</span>
                                </a>
                              </li>
                              <li><a href="login.html"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                            </ul>
                          </li>
                        </ul>
                      </nav>
                    </div>
                  </div>
                  </header>
                <!--header end-->
            {% endblock %}

            <!-- page content -->

            <section class="col-md-12 page">
              {% block main %}
                {% block aside %}
                  <aside class="col-md-3 left_col">
                        {% block asideContent %}{% endblock %}
                  </aside>
                {% endblock %}
                <div class="right_col" role="main">
                    {% block mainContent %}{% endblock %}
                </div>
              {% endblock %}
            </section>

        </div>

        <!-- jQuery -->
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        <!-- Custom Theme Scripts -->
        <script src="{{ asset('/js/custom.min.js') }}"></script>
        {% block javascripts %}{% endblock %}

    {% endblock %}
  </body>
</html>
