{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery.path.js') }}"></script>
    <script type="text/javascript">
        var ancho = $(window).width() - ($(window).width() * 15 / 100);
        var alto = $(window).height();
        //Posiciones finales img Merce
        var finMerceX = ancho - ((ancho * 25) / 100);
        var finMerceY = alto - ((alto * 80) / 100);
        //Posiciones finales img Eli
        var finEliX = ancho - ((ancho * 75) / 100);
        var finEliY = alto - ((alto * 80) / 100);

        var merce_params = {
            start: {
                x: ancho,
                y: alto,
                angle: 10
            },
            end: {
                x: finMerceX,
                y: finMerceY,
                angle: -10,
                length: 0.25
            }
        }

        var eli_params = {
            start: {
                x: 0,
                y: alto,
                angle: 10
            },
            end: {
                x: finEliX,
                y: finEliY,
                angle: -10,
                length: 0.25
            }
        }

        $(document).ready(function() {
            $(".div_eli").animate({path: new $.path.bezier(eli_params),opacity: "1"}, 2000);
            $(".div_eli h3").animate({hidden: ""}, 2500);
            $(".div_merce").animate({path: new $.path.bezier(merce_params),opacity: "1"}, 2000);
            $(".div_merce h3").animate({hidden: ""}, 2500);
        });
    </script>
